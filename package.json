{
  "name": "statefull-api",
  "description": "Statefull api for the 'statefull' node systems.",
  "version": "0.0.1",
  "main": "dist/index.js",
  "author": "majo418",
  "license": "MIT",
  "private": false,
  "keywords": [
    "typescript",
    "node",
    "lib",
    "stateful",
    "server",
    "websocket"
  ],
  "repository": {
    "url": "git@github.com:majo418/statefull-api.git",
    "type": "git"
  },
  "scripts": {
    "tsc": "tsc -p tsconfig.json",
    "start": "ts-node src/index.ts",
    "exec": "node dist/index.js",
    "test": "mocha --require ts-node/register src/test/**/*.test.ts",
    "build": "npm run tsc",
    "start:watch": "nodemon --delay 1 -w ./src -x \"npm run start\" --ext *.ts",
    "build:watch": "nodemon --delay 1 -w ./src -x \"npm run build\" --ext *.ts",
    "test:watch": "nodemon --delay 1 -w ./src -x \"npm run test\" --ext *.ts",
    "exec:watch": "nodemon --delay 1 -w ./dist -x \"npm run exec\"",
    "dev": "nodemon --delay 1 -w ./src -x \"npm run build\" --ext *.ts"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/express": "^4",
    "@types/jsonwebtoken": "^8",
    "@types/mocha": "^9",
    "@types/node": "^16",
    "@types/node-fetch": "^2",
    "chai": "^4",
    "mocha": "^9",
    "nodemon": "^2",
    "ts-node": "^10",
    "typescript": "^4"
  },
  "dependencies": {
    "express": "^4",
    "jsonwebtoken": "^8",
    "majotools": "^1",
    "node-fetch": "^2"
  }
}
